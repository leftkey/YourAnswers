page {
  height: 100%;
  background: #44cd6c;
  background-size: 100%;
}

.header {
  height: 300rpx;
  /*background: red;*/
}

.my-face {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid powderblue;
  border-radius: 50%;
  margin: 30rpx auto;
  overflow: hidden;
}

.my-face image {
  width: 100%;
  height: 100%;
}

.my-name {
  height: 50rpx;
  margin: 0 auto;
  /*background: blue;*/
  text-align: center;
  color: ghostwhite;
  text-shadow: 1rpx 1rpx #ccc;
}

.chart {
  height: 500rpx;
  background: yellow;
}

.info {
  padding: 30rpx;
}

.info-box {
  height: 200rpx;
  background: #3a8887;
  border-radius: 30rpx;
  margin-top: 30rpx;
  box-shadow: -2rpx -2rpx 15rpx #2f7371;
}

.info-icon {
  width: 160rpx;
  height: 160rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
  float: left;
}

.info-name {
  background: url("https://www.hounanxun.com/xcx/info/name.png") no-repeat;
  background-size: 100%;
}

.info-school {
  background: url("https://www.hounanxun.com/xcx/info/school.png") no-repeat;
  background-size: 100%;
}

.info-grade {
  background: url("https://www.hounanxun.com/xcx/info/grade.png") no-repeat;
  background-size: 100%;
}

.info-lesson {
  background: url("https://www.hounanxun.com/xcx/info/lesson.png") no-repeat;
  background-size: 100%;
}

.info-txt {
  height: 150rpx;
  width: 5em;
  float: left;
  margin-left: 50rpx;
  margin-top: 20rpx;
  font-size: 80rpx;
  font-family: "楷体";
  text-align: center;
  color: #fff;
  line-height: 160rpx;
  text-overflow: ellipsis;
  border-bottom: 1px solid #fff;
  white-space: nowrap;
  overflow: hidden;
}
